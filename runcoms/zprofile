# Petes customizations
function svndiff {
  svn diff "$@" | colordiff | less -RFX
}

# For machines with local home
if [ -e ~/.zshrc.local ]; then
    . ~/.zshrc.local
fi

# For shared homes
if [ -e ~/.zshrc.$(hostname) ]; then
    . ~/.zshrc.$(hostname)
fi

